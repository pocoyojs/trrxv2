{
  "name": "trrx",
  "version": "2.0.2",
  "description": "Descrição do meu app TRRX",
  "author": "pocwyo",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "deploy": "electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.meuapp.desktop",
    "productName": "TRRX",
    "publish": [
      {
        "provider": "github",
        "owner": "pocoyojs",
        "repo": "trrxv2",
        "private": true
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  }
}
